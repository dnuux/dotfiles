#
# bspwm hotkeys
#

super + ctrl + q
    bspc quit

super + shift + c
    bspc window -c

super + b
    bspc desktop -B

super + t
    bspc desktop -l next

super + {x,s,p}
    bspc window -t {locked,sticky,private}

super + {f,shift + f}
    bspc window -t {floating,fullscreen}

super + {r,shift + r,u}
    bspc desktop -R {90,-90,180}

super + {_,shift +}Tab
    bspc {desktop,window} -f last

super + apostrophe
    bspc window -s last

super + {o,i}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

super + {space,shift + space}
    bspc desktop -F {vertical,horizontal}

super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }d
    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

alt + {h,j,k,l}
    bspc window -e {left -10,down +10,up -10,right +10}

alt + shift + {h,j,k,l}
    bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

alt + {_,shift + }{1,2}
    bspc {monitor -f,window -m} ^{1,2}

alt + ctrl + {1,2}
    bspc window -t fullscreen=on; \
    bspc window -m ^{1,2};

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

#
# wm independent hotkeys
#

super + shift + Return
    urxvtc

super + ctrl + r
    pkill -x redshift || redshift &

super + v
    dmenu_run

super + Escape
    pkill -USR1 -x sxhkd

XF86Audio{Play,Prev,Next}
    mpc -q {toggle,prev,next}

XF86Audio{Lower,Raise}Volume
    amixer -q sset Master {4-,4+} unmute

XF86AudioMute
    amixer -q sset Master toggle
