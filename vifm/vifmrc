" colorscheme
colorscheme cookies

" options
set fastrun
set followlinks
set history=15
set ignorecase
set incsearch
set noconfirm
set nohlsearch
set noiec
set norunexec
set notrash
set novimhelp
set scrolloff=4
set slowfs=curlftpfs
set smartcase
set sortnumbers
set statusline="  %t%= %A %10u:%-7g %15s %20d  "
set timefmt=%d/%m\ %H:%M
set undolevels=15
set vicmd=vim
set vifminfo=chistory,state,tui,dirstack,bookmarks
set wildmenu

" marks
mark b ~/bin/
mark d ~/documents/
mark e /etc/
mark h ~/
mark l ~/ext_hdd/Lataukset/
mark m ~/music/
mark o /var/log/
mark p ~/pictures/
mark t ~/tmp/

" commands
command df df -h %m 2> /dev/null
command diff vim -d %f %F
command zip zip -r %f.zip %f
command run !! ./%f
command make !!make
command vgrep vim "+grep %a"

" filetypes

" PDF
filetype *.pdf zathura %f

" Audio
filetype *.aac,*.wav,*.mp3,*.flac,*.ogg,*.m4a mplayer %f
fileviewer *.mp3 mp3info

" Video
filextype *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.vob,*.flv mplayer %f
fileviewer *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.vob
         \ ffprobe -show_files -pretty %f 2> /dev/null

" Web
filetype *.html,*.htm firefox-beta-bin %f %i &

" Object
filetype *.o nm %f | less

" Image
filextype *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.xpm feh %f

" MD5
filetype *.md5 md5sum -c %f

" mappings

nmap s :shell<cr>
nmap S :sort<cr>
nmap w :view<cr>

" Open file in the background using its default program
nmap gb :file &<cr>l

" Faster renaming
nmap I cw<c-a>
nmap cc cw<c-u>
nmap A cw<c-w>

" Open console in current directory
nmap ,t :!urxvtc &<cr>

" Open vim to edit .vifmrc
nmap ,e :execute ':!vim $MYVIFMRC' | restart<cr>

" Toggle wrap setting on ,w key
nmap ,w :set wrap!<cr>
